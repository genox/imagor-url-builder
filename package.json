{
  "name": "@genox/imagor-url-builder",
  "description": "A library for building URLs to use with imagor",
  "author": "Oliver Studer <o.studer@me.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/genox/imagor-url-builder.git"
  },
  "keywords": [
    "imagor",
    "typescript",
    "imagor url builder"
  ],
  "version": "1.0.0",
  "module": "./dist/imagor-url-builder.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/imagor-url-builder.js"
    },
    "./dist/": {
      "import": "./dist/"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite --host",
    "build": "rimraf --no-glob build && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts && copyfiles ./package.json build",
    "start:docker": "docker compose -f ./docker-compose.dev.yml up -d",
    "stop:docker": "docker compose -f ./docker-compose.dev.yml down -v",
    "test": "yarn start:docker && wait-on -t 10000 http://localhost:8000 && vitest; EXIT_CODE=$?; yarn stop:docker; exit $EXIT_CODE",
    "test:coverage": "yarn start:docker && wait-on -t 10000 http://localhost:8000 && vitest --coverage; EXIT_CODE=$?; yarn stop:docker; exit $EXIT_CODE",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@epic-web/config": "^1.20.1",
    "@types/express": "^5.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.7",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.21.0",
    "jiti": "^2.4.2",
    "lint-staged": "^15.4.3",
    "node-fetch": "^3.3.2",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vitest": "^3.0.7",
    "wait-on": "^8.0.3"
  },
  "packageManager": "yarn@4.9.1"
}
